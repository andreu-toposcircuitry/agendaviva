{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@agendaviva/shared": ["packages/shared/src"],
      "@agendaviva/agent": ["packages/agent/src"],
      "@agendaviva/scraper": ["packages/scraper/src"]
    }
  },
  "exclude": ["node_modules", "**/dist/**"]
}
