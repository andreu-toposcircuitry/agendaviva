---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Directori d'activitats per a infants i joves al Vallès Oriental amb puntuació d'adequació neurodivergent" } = Astro.props;
---

<!DOCTYPE html>
<html lang="ca">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title} - Agenda Viva VO</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
</head>
<body>
  <header class="bg-white shadow-sm sticky top-0 z-50">
    <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <div class="flex items-center">
          <a href="/" class="text-2xl font-bold text-primary-600">
            Agenda Viva VO
          </a>
        </div>
        <div class="hidden md:flex space-x-6">
          <a href="/cerca" class="text-gray-700 hover:text-primary-600">Cercar</a>
          <a href="/nd-friendly" class="text-gray-700 hover:text-primary-600">ND-Friendly</a>
          <a href="/sobre" class="text-gray-700 hover:text-primary-600">Sobre</a>
          <a href="/proposa" class="text-gray-700 hover:text-primary-600">Proposa</a>
        </div>
        <button id="mobile-menu-button" class="md:hidden">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </nav>
  </header>

  <main>
    <slot />
  </main>

  <footer class="bg-gray-900 text-white mt-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid md:grid-cols-3 gap-8">
        <div>
          <h3 class="text-lg font-bold mb-4">Agenda Viva VO</h3>
          <p class="text-gray-400">
            Directori participatiu d'activitats per a infants i joves al Vallès Oriental.
          </p>
        </div>
        <div>
          <h4 class="font-semibold mb-4">Navegació</h4>
          <ul class="space-y-2 text-gray-400">
            <li><a href="/cerca" class="hover:text-white">Cercar activitats</a></li>
            <li><a href="/nd-friendly" class="hover:text-white">ND-Friendly</a></li>
            <li><a href="/que-es-nd" class="hover:text-white">Què és ND?</a></li>
            <li><a href="/proposa" class="hover:text-white">Proposa activitat</a></li>
          </ul>
        </div>
        <div>
          <h4 class="font-semibold mb-4">Projecte</h4>
          <p class="text-gray-400 mb-2">Per Weird Wired Humans</p>
          <a href="https://weirdwiredhumans.com" target="_blank" class="text-primary-400 hover:text-primary-300">
            weirdwiredhumans.com
          </a>
        </div>
      </div>
      <div class="mt-8 pt-8 border-t border-gray-800 text-center text-gray-400">
        <p>&copy; 2025 Agenda Viva VO. Totes les dades són públiques i verificades per la comunitat.</p>
      </div>
    </div>
  </footer>

  <script>
    // Mobile menu toggle
    const menuButton = document.getElementById('mobile-menu-button');
    if (menuButton) {
      menuButton.addEventListener('click', () => {
        // Add mobile menu logic here if needed
        console.log('Mobile menu clicked');
      });
    }
  </script>
</body>
</html>
