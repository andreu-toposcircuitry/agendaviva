  "private": true,
  "description": "Directori participatiu d'activitats per a infants i joves al Vallès Oriental",
  "keywords": ["vallès-oriental", "activitats", "neurodiversitat", "catalunya"],
  "homepage": "https://agendaviva.cat",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andreu-toposcircuitry/agendaviva.git"
  },
  "license": "MIT",
  "author": "Weird Wired Humans <hola@weirdwiredhumans.com>",
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
